<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.example.divya.gpacalculator.SES2014">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>


    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:id="@+id/scrollView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="left|center_vertical"
        android:fillViewport="false">




        <RelativeLayout
            android:layout_width="fill_parent"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="50dp"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            tools:context="com.example.divya.cgpa.Calculate"
            tools:showIn="@layout/fragment_batch1"
            android:layout_gravity="center_horizontal|top">




            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:hint="Credit"
                android:id="@+id/EditText1"
                android:inputType="number"
                android:ems="7"
                android:textAlignment="center"
                android:layout_below="@+id/textView1"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="43dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:hint="Credit"
                android:id="@+id/EditText12"
                android:inputType="number"
                android:ems="7"
                android:textAlignment="center"
                android:layout_below="@+id/EditText1"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignRight="@+id/EditText15"
                android:layout_alignEnd="@+id/EditText15" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:hint="Credit"
                android:inputType="number"
                android:id="@+id/EditText13"
                android:ems="7"
                android:textAlignment="center"
                android:layout_below="@+id/EditText15"
                android:layout_toRightOf="@+id/linear1"
                android:layout_alignRight="@+id/EditText1"
                android:layout_alignEnd="@+id/EditText1" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:hint="Credit"
                android:inputType="number"
                android:id="@+id/EditText14"
                android:ems="7"
                android:textAlignment="center"
                android:layout_below="@+id/EditText13"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignRight="@+id/EditText13"
                android:layout_alignEnd="@+id/EditText13" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:hint="Credit"
                android:ems="7"
                android:textAlignment="center"
                android:inputType="number"
                android:id="@+id/EditText15"
                android:layout_below="@+id/EditText12"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignRight="@+id/EditText13"
                android:layout_alignEnd="@+id/EditText13" />



            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/spinner1"
                android:spinnerMode="dialog"
                android:layout_above="@+id/EditText12"
                android:layout_alignLeft="@+id/spinner14"
                android:layout_alignStart="@+id/spinner14" />

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/spinner12"
                android:layout_above="@+id/EditText14"
                android:layout_alignLeft="@+id/spinner13"
                android:layout_alignStart="@+id/spinner13" />

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/spinner14"
                android:spinnerMode="dropdown"
                android:layout_above="@+id/EditText15"
                android:layout_alignRight="@+id/textView12"
                android:layout_alignEnd="@+id/textView12" />

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/spinner15"
                android:spinnerMode="dropdown"
                android:layout_above="@+id/button1"
                android:layout_alignLeft="@+id/spinner12"
                android:layout_alignStart="@+id/spinner12" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Credits"
                android:id="@+id/textView1"
                android:textStyle="bold"
                android:layout_below="@+id/addiconn"
                android:layout_toLeftOf="@+id/button13"
                android:layout_toStartOf="@+id/button13" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="    Grades"
                android:id="@+id/textView12"
                android:textStyle="bold"
                android:layout_above="@+id/EditText1"
                android:layout_toRightOf="@+id/button1"
                android:layout_toEndOf="@+id/button1" />

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/spinner13"
                android:layout_gravity="right|bottom"
                android:layout_alignBottom="@+id/EditText15"
                android:layout_alignLeft="@+id/spinner14"
                android:layout_alignStart="@+id/spinner14" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/linear1"
                android:ems="7"
                android:layout_below="@+id/EditText14"
                android:layout_alignParentLeft="true"
                android:orientation="vertical">
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/linear2"
                android:orientation="vertical"
                android:layout_below="@+id/spinner15"
                android:layout_alignLeft="@+id/linear1">
            </LinearLayout>



            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calculate"
                android:id="@+id/button1"
                android:layout_gravity="center"
                android:layout_below="@+id/EditText14"
                android:layout_toRightOf="@+id/button13"
                android:layout_toEndOf="@+id/button13" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/minusiconn"
                android:src="@drawable/minus1"

                android:layout_gravity="center_horizontal|bottom"
                android:layout_above="@+id/textView1"
                android:layout_centerHorizontal="true" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/addiconn"
                android:src="@drawable/addicon"
                android:gravity="bottom"
                android:layout_gravity="right|bottom"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/minusiconn"
                android:layout_toEndOf="@+id/minusiconn" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Clear"
                android:id="@+id/button13"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_alignTop="@+id/button1"
                android:layout_toLeftOf="@+id/minusiconn"
                android:layout_toStartOf="@+id/minusiconn" />

        </RelativeLayout>


    </ScrollView>





</android.support.design.widget.CoordinatorLayout>
